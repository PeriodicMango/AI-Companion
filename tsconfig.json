// tsconfig.json

{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ]
}